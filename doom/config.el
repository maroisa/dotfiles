(after! emmet-mode
  (add-hook 'emmet-mode-hook #'emmet-preview-mode))

(after! eglot
  (add-hook
   'eglot-managed-mode-hook
   (lambda ()
     (eglot-inlay-hints-mode -1))))

(setq org-roam-directory (file-truename "~/org-roam/"))
(setq find-file-visit-truename t)
(org-roam-db-autosync-mode)





